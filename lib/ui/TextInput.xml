<component xmlns="http://bender.igel.co.jp" prototype="nibbler.ui.TextInput">

  <property name="value" as="string"/>
  <property name="placeholder" as="string"/>
  <property name="type" as="string"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:div class="vs_ui_inputfield">
      <html:input type="text" value="" placeholder="type ..." incremental="incremental"/>
      <html:div class='clear_button'/>
    </html:div>
  </view>

  <watch>
    <get instance="$self" property="value">
      this.__vs_instance.value = value;
    </get>

    <get instance="$self" property="placeholder">
      this.__vs_instance.placeholder = value;
    </get>

    <get instance="$self" property="type">
      this.__vs_instance.type = value;
    </get>
  </watch>

</component>
