<component xmlns="http://bender.igel.co.jp">

  <property name="indeterminate" as="boolean" value="false"/>
  <property name="index" as="number" value="0"/>
  <property name="range" as="dynamic" value="[0, 100]"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:div class="vs_ui_progressbar"><html:div></html:div></html:div>
  </view>

  <watch>
    <get instance="$self" event="@rendered"/>
    <set>
      var instance = this;

      instance.__vs_instance = new vs.ui.ProgressBar ({
        node: instance.views.$root,
        indeterminate: instance.properties.indeterminate,
        index: instance.properties.index,
        range: instance.properties.range
      }).init ();
    </set>
  </watch>

  <watch>
    <get instance="$self" property="indeterminate">
      if (!this.__vs_instance) return;
      this.__vs_instance.indeterminate = value;
    </get>
    <get instance="$self" property="index">
      if (!this.__vs_instance) return;
      this.__vs_instance.index = value;
    </get>
    <get instance="$self" property="range">
      if (!this.__vs_instance) return;
      this.__vs_instance.range = value;
    </get>
  </watch>

</component>
