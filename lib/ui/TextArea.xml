<component xmlns="http://bender.igel.co.jp" href="View.xml" on-render="nibbler.ui.TextArea">

  <property name="value"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml" stack="replace">
    <html:textarea class="vs_ui_textarea"></html:textarea>
  </view>

  <watch>
    <get property="value">
      this.__vs_instance.value = property;
    </get>
  </watch>

</component>
