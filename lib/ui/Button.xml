<component xmlns="http://bender.igel.co.jp" id="Button" href="View.xml" on-render="nibbler.ui.Button">

  <property name="text"/>
  <property name="type" value="default"/>
  <property name="style" value="default_style"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml" stack="replace">
    <html:div class="vs_ui_button"><html:div></html:div></html:div>
  </view>

  <watch>
    <get property="text">
      this.__vs_instance.text = property;
    </get>
    <get property="type">
      this.__vs_instance.type = property;
    </get>
    <get property="style">
      this.__vs_instance.style = property;
    </get>
  </watch>

</component>
