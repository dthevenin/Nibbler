<component xmlns="http://bender.igel.co.jp">
  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <instance href="../lib/ui/Application.xml">
      <instance href="../lib/ui/Button.xml" text="Button"/>
      <instance href="../lib/ui/Button.xml" text="Button" style="green"/>
      <instance href="../lib/ui/Button.xml" text="Button" style="red"/>
      <instance href="../lib/ui/Button.xml" text="Button" style="grey"/>
      <instance href="../lib/ui/Button.xml" text="Button" type="nav"/>
      <instance href="../lib/ui/Button.xml" text="Button" type="nav" style="silver_style"/>
      <instance href="../lib/ui/Button.xml" text="Button" type="nav" style="black_style"/>
      <instance href="../lib/ui/Button.xml" text="Button" type="nav_back"/>
